<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        text-align: center;
    }
    
    body {
        font-family: "Lato", sans-serif;
    }
    
    .sidenav {
        width: 115px;
        height: 600px;
        position: fixed;
        z-index: 1;
        top: 80px;
        left: 0px;
        background: #eee;
        overflow-x: hidden;
        padding: 8px 0;
    }
    
    .sidenav a {
        padding: 6px 8px 6px 16px;
        text-decoration: none;
        font-size: 20px;
        color: #2196F3;
        display: block;
    }
    
    .sidenav a:hover {
        color: #064579;
    }
    
    .main {
        margin-left: 140px;
        /* Same width as the sidebar + left position in px */
        font-size: 28px;
        /* Increased text to enable scrolling */
        padding: 0px 10px;
    }
    
    @media screen and (max-height: 450px) {
        .sidenav {
            padding-top: 15px;
        }
        .sidenav a {
            font-size: 18px;
        }
    }
</style>


<body>
    <div class="sidenav">
        <a href="/examcell/modify/room/add">ADD</a>
        <a href="/examcell/modify/room/view">VIEW</a>
        <a href="/examcell/modify/room/delete">DELETE</a>

    </div>
    <h3> ROOM COLLECTION - VIEW</h3>
    <br>

    <form action="/examcell/modify/room/view" method="POST">
        <div class="form-group">
            <label for="blockid">
                <h5 class="text">Select Block:</h5>
            </label>
            <select name="blockid" class="form-control" id="bid">
                <% blockname.forEach((element) => { %>
                    <option value= <%= element %> > <%= element %> </option>
                <% }); %>
            </select>
        </div>

        <button type="submit" class="m-5 btn btn-success btn-lg">
            FIND
         </button>

    </form>

    <br>




    <% if( room_info.length == 0){ %>
        <h6></h6>
        <%  }else{ %>

            <table style="width:50%">
                <tr>
                    <th>BLOCK</th>
                    <th>ROOM NO</th>
                    <th>MATRIX</th>
                </tr>
                <% room_info.forEach((element) => { %>
                    <tr>
                        <td>
                            <%= element[0] %>
                        </td>
                        <td>
                            <%= element[1] %>
                        </td>
                        <td>
                            <%= element[2] %>
                        </td>

                    </tr>
                    <%  }); %>


            </table>




            <% } %>


</body>

</html>